<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@  taglib prefix="ww" uri="webwork"%>
<%
String path = request.getContextPath();
%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>

<title>充值卡列表</title>
<%@ include file="/pages/common/common_head.jsp"%>

<script type="text/javascript">
	
	
	//添加车辆弹框
	function addEntity(){
		var dialoguser = $.dialog({
		    id:'rechargeCarList', 
		    title:"新建充值卡",
			content :'url:<%=path%>/account/showRechargeCardDetail.action',
			fixed:true,
			width:500,
			height:550,
			resize:false,
	 		max: false,
		    min: false,
		    lock: true,
		    ok: function(){
		    	var valid = this.content.isValid();
		    	if (valid){
		    		var form = this.content.getForm();
		    		showLoading(parent);
		    		$.post(form.attr("action"),form.serialize(),r_savedata,'json').error(requestError);
		    	}
		    	return false;
		    },
		    okVal:'添加',
		    cancelVal: '关闭',
		    cancel: true,
		    close: function () {
		        this.hide();
		        restoreInfo('hospitalinfo');
		        return true;
		    },
		    init: function(){
		    	if (typeof this.content.isError != 'undefined'){
		    		$(":button").slice(0,1).hide();
		    	}
		    }
		});
	}
	
	function editEntity(id){
		var dialoguser = $.dialog({
		    id:'editRechargeCarList', 
		    title:"编辑充值卡",
			content :'url:<%=path%>/account/showRechargeCardDetail.action?rechargeCard.id='+id,
			fixed:true,
			width:500,
			height:550,
			resize:false,
	 		max: false,
		    min: false,
		    lock: true,
		    ok: function(){
		    	var valid = this.content.isValid();
		    	if (valid){
		    		var form = this.content.getForm();
		    		showLoading(parent);
		    		$.post(form.attr("action"),form.serialize(),r_savedata,'json').error(requestError);
		    	}
		    	return false;
		    },
		    okVal:'保存',
		    cancelVal: '关闭',
		    cancel: true,
		    close: function () {
		        this.hide();
		        restoreInfo('hospitalinfo');
		        return true;
		    },
		    init: function(){
		    	if (typeof this.content.isError != 'undefined'){
		    		$(":button").slice(0,1).hide();
		    	}
		    }
		});
	}
	
	function deleteEntity(){
		var ob = document.getElementsByName("checkdel");
		var check = false;
		for (var i = 0; i < ob.length; i++) {
			if (ob[i].checked) {
				check = true;
				break;
			}
		}
		if (!check) {
			alertinfo("请选择要删除的数据！");
			return false;
		}
		alertconfirm("确认删除选中的数据吗？",function (){
			showLoading();
			$.post('<%=path%>/account/rechargeCardDelete.action',$('#sform').serialize(),r_delete,'json').error(requestError);
		});	
	}
	function r_savedata(data){
		hideLoading();
		switch(data.result){
			case 0:
				alertok(data.msg, function(){
			    	$('#sform').submit();		
			    });
				break;
			case 1:
				restoreInfo();
				alerterror(data.msg);
				break;
			case 9:
				document.location = "doError.action";
				break;
		}
	}
	function r_delete(data){
		hideLoading();
		switch(data.result){
			case 0:
				alertok("删除成功！", function(){
			    	$('#sform').submit();		
			    });
				break;
			case 1:
				restoreInfo();
				alerterror(data.msg);
				break;
			case 9:
				document.location = "doError.action";
				break;
		}
	}
	function deleteOneEntity(id){
		var pars={
				"id":id
			};
		alertconfirm("确认删除选中的数据吗？",function (){
			showLoading();
			$.post('carDelete.action',pars,r_delete,'json').error(requestError);
		});	
	}
	function r_save(data){
		hideLoading();
		switch(data.result){
			case 0:
				alertok("添加成功！");
				break;
			case 1:
				restoreInfo();
				alerterror(data.msg);
				break;
			case 9:
				document.location = "doError.action";
				break;
		}
	}
	function searchEntity(){
		$("#sform").submit();
	}


</script>
</head>
<body  class="SubPage">
<div class="container-fluid">
			<form class="form-horizontal" name="sform" id="sform" method="post" action="<%=path%>/account/showRechargeCardList.action">
				<input type="hidden" name="page.orderFlag" id="page.orderFlag"
						value="<ww:property value="page.orderFlag"/>">
				<input type="hidden" name="page.orderString" id="page.orderString"
						value="<ww:property value="page.orderString"/>">
				
				<div class="ControlBlock">
				<div class="row SelectBlock">
					<div class="col-sm-4 col-xs-6">
						 <div class="form-group">
						 	<label for="rechargeCard.name" class="col-xs-4 control-label">名称：</label>
						 	<div class="col-xs-8">
						 		<input type="text" class="kd form-control" name="rechargeCard.name" value='<ww:property value="rechargeCard.name" />' />
						 	</div>
						 </div>
						 
						 
						
					 </div>
					 <div class="col-sm-4 col-xs-6">
						<div class="form-group">
						 	<label for="rechargeCard.channel" class="col-xs-4 control-label">渠道：</label>
						 	<div class="col-xs-8">
						 		<select class="form-control" name="rechargeCard.channel" id="rechargeCard.channel">
									<option value="">全部</option>
									<option value='W'   <ww:if test='"W"==rechargeCard.channel'>selected</ww:if>>微信</option>
									<option value='C'   <ww:if test='"C"==rechargeCard.channel'>selected</ww:if>>后台</option>
								</select>
							</div>
						 </div>
						 
						
					 </div>


					<div class="col-sm-4 col-xs-6">
						  <div class="form-group">
						 	<label for="rechargeCard.isValid" class="col-xs-4 control-label">状态：</label>
						 	<div class="col-xs-8">
						 		<select class="form-control"   name="rechargeCard.isValid" id="rechargeCard.isValid">
									<option value="">全部</option>
									<option value='<ww:property value="@com.dearho.cs.account.pojo.RechargeCard@IS_VALID_TRUE"/>'   <ww:if test="1==rechargeCard.isValid">selected</ww:if>>有效</option>
									<option value='<ww:property value="@com.dearho.cs.account.pojo.RechargeCard@IS_VALID_FALSE"/>'   <ww:if test="0==rechargeCard.isValid">selected</ww:if>>无效</option>
								</select>
							</div>
						 </div>
						
					 </div>
					 
				 </div>
				 	
				 <div class="row SubmitButtonBlock">
					<div class="col-sm-2 col-sm-offset-3 col-xs-4"><a class="btn btn-block Button1" onclick="searchEntity();" target="_blank"><i class="fa fa-search"></i>查询</a></div>
					<ww:if test="hasPrivilegeUrl('/account/showRechargeCardDetail.action')">
						<div class="col-sm-2 col-xs-4"><a class="btn btn-block Button2" onclick="addEntity();" target="_blank"><i class="fa fa-floppy-o"></i>添加</a></div>
					</ww:if>
					<ww:if test="hasPrivilegeUrl('/account/rechargeCardDelete.action')">
  						<div class="col-sm-2 col-xs-4"><a class="btn btn-block Button3" onclick="deleteEntity();" target="_blank"><i class="fa fa-trash-o"></i>删除</a></div>
  					</ww:if>
  				 </div>
			</div>
				
			
			<div class="row TableBlock">
				<table class="table table-striped table-bordered table-condensed">
					<tr class="ths" id="tab_bg_cl">
						<td  height="28" nowrap>
							<input type="checkbox" name="checkdelcheckall" onclick="funCheck('','checkdel')" />
						</td>
						<td  >
							充值卡名称
						</td>
						<td  >
							金额
						</td>
						<td  >
							状态
						</td>
						<td  >
							渠道
						</td>
						<td  >
							开始时间
						</td>
						<td >
							结束时间
						</td>
						
						<td  nowrap width=157>
							操作
						</td>
					</tr>
			
					<ww:iterator value="page.mResults" id="data" status="rl">
						<tr
							
							 <ww:if test="#rl.even"> class="trs"</ww:if> style="font-size:12px;">
							<td >
								<input type="checkbox" name="checkdel" value="<ww:property value='id' />" />
							</td>
							<td >
								<ww:property value="name" />
							</td>
							
							<td >
								<ww:property value="formatAmount(amount)" />
							</td>
							
							<td>
								<ww:if test="1==isValid"> <span class="label  label-success">有效</span></ww:if>
								<ww:elseif test="0==isValid"><span class="label label-warning">无效</span></ww:elseif>
								<ww:else><span class="label label-danger">未知</span></ww:else>
							</td>
							<td >
								<ww:if test='channel !=null && channel.contains("P")'><span class="label  label-primary">前台</span></ww:if>
								<ww:if test='channel !=null && channel.contains("W")'><span class="label label-success">微信</span></ww:if>
								<ww:if test='channel !=null && channel.contains("C")'><span class="label label-info">后台</span></ww:if>
							</td>
							<td >
								<ww:property value="transDateString(startValidTime)" />
							</td>
							<td >
								<ww:property value="transDateString(endValidTime)" />
							</td>
							
							<td >
								<ww:if test="hasPrivilegeUrl('/account/showRechargeCardDetail.action')">
									<div class="pan_btn3"  onclick="editEntity('<ww:property value="id"/>');">编辑</div>
								</ww:if>
							
								<ww:if test="hasPrivilegeUrl('/systemutil/getSysOperateLogByDataId.action')">									
									<div class="pan_btn2" onclick="showLogRecordForDialog('<ww:property value="id" />','<%=path%>');">记录</div>
								</ww:if>
							</td>
							
						</tr>
					</ww:iterator>
					<tr >
						<td align="center" colspan="12">
							<ww:property value="page.pageSplit" />	
						</td>
					</tr>
				</table>
			</div>
			</form>
